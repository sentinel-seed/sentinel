{
  "name": "@sentinelseed/elizaos-plugin",
  "version": "1.0.1",
  "description": "Sentinel AI safety plugin for ElizaOS - THSP protocol validation for autonomous agents",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "elizaos",
    "eliza",
    "ai-safety",
    "alignment",
    "sentinel",
    "thsp",
    "autonomous-agents",
    "ai-agents",
    "plugin",
    "web3",
    "crypto"
  ],
  "author": {
    "name": "Sentinel Team",
    "email": "team@sentinelseed.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sentinel-seed/sentinel.git",
    "directory": "packages/elizaos"
  },
  "homepage": "https://sentinelseed.dev",
  "bugs": {
    "url": "https://github.com/sentinel-seed/sentinel/issues"
  },
  "peerDependencies": {
    "@elizaos/core": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "@elizaos/core": {
      "optional": true
    }
  },
  "devDependencies": {
    "@elizaos/core": "^1.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.57.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
