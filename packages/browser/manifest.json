{
  "manifest_version": 3,
  "name": "Sentinel Guard",
  "version": "0.1.0",
  "description": "Protect your AI conversations from data harvesting, detect threats, and stay safe online.",

  "permissions": [
    "storage",
    "notifications",
    "activeTab",
    "scripting",
    "management",
    "alarms"
  ],

  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://perplexity.ai/*",
    "https://www.perplexity.ai/*",
    "https://*.deepseek.com/*",
    "https://grok.x.ai/*",
    "https://copilot.microsoft.com/*",
    "https://meta.ai/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://perplexity.ai/*",
        "https://www.perplexity.ai/*",
        "https://*.deepseek.com/*",
        "https://grok.x.ai/*",
        "https://copilot.microsoft.com/*",
        "https://meta.ai/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_start"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Sentinel Guard"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
