{
  "name": "sentinel-ai-safety",
  "displayName": "Sentinel AI Safety",
  "description": "AI safety guardrails for LLM prompts using the THSP protocol (Truth, Harm, Scope, Purpose)",
  "version": "0.7.1",
  "publisher": "sentinelseed",
  "icon": "sentinel-logo-128.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/sentinel-seed/sentinel"
  },
  "homepage": "https://sentinelseed.dev",
  "bugs": {
    "url": "https://github.com/sentinel-seed/sentinel/issues"
  },
  "engines": {
    "vscode": "^1.85.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "keywords": [
    "ai",
    "alignment",
    "anthropic",
    "compliance",
    "csa",
    "dashboard",
    "eu-ai-act",
    "guardrails",
    "llm",
    "metrics",
    "ollama",
    "openai",
    "owasp",
    "prompt",
    "safety",
    "security",
    "sentinel",
    "sql-injection",
    "thsp"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:plaintext",
    "onLanguage:python",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:json",
    "onLanguage:yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sentinel.analyzeSelection",
        "title": "Sentinel: Analyze"
      },
      {
        "command": "sentinel.analyzeFile",
        "title": "Sentinel: Analyze File"
      },
      {
        "command": "sentinel.insertSeed",
        "title": "Sentinel: Insert Seed"
      },
      {
        "command": "sentinel.insertSeedMinimal",
        "title": "Sentinel: Insert Seed (Minimal)"
      },
      {
        "command": "sentinel.showStatus",
        "title": "Sentinel: Status"
      },
      {
        "command": "sentinel.setOpenAIKey",
        "title": "Sentinel: Set OpenAI Key"
      },
      {
        "command": "sentinel.setAnthropicKey",
        "title": "Sentinel: Set Anthropic Key"
      },
      {
        "command": "sentinel.setCompatibleKey",
        "title": "Sentinel: Set Custom API Key"
      },
      {
        "command": "sentinel.checkComplianceAll",
        "title": "Sentinel: Compliance"
      },
      {
        "command": "sentinel.checkComplianceEUAIAct",
        "title": "Sentinel: EU AI Act"
      },
      {
        "command": "sentinel.checkComplianceOWASP",
        "title": "Sentinel: OWASP"
      },
      {
        "command": "sentinel.checkComplianceCSA",
        "title": "Sentinel: CSA"
      },
      {
        "command": "sentinel.scanSecrets",
        "title": "Sentinel: Scan Secrets"
      },
      {
        "command": "sentinel.sanitizePrompt",
        "title": "Sentinel: Sanitize"
      },
      {
        "command": "sentinel.validateOutput",
        "title": "Sentinel: Validate"
      },
      {
        "command": "sentinel.showMetrics",
        "title": "Sentinel: Metrics Dashboard"
      },
      {
        "command": "sentinel.scanDatabase",
        "title": "Sentinel: SQL Injection Scan"
      },
      {
        "command": "sentinel.clearMetrics",
        "title": "Sentinel: Clear Metrics"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "sentinel.analyzeSelection",
          "group": "sentinel@1",
          "when": "editorHasSelection"
        },
        {
          "command": "sentinel.checkComplianceAll",
          "group": "sentinel@2"
        },
        {
          "command": "sentinel.checkComplianceEUAIAct",
          "group": "sentinel@3"
        },
        {
          "command": "sentinel.checkComplianceOWASP",
          "group": "sentinel@4"
        },
        {
          "command": "sentinel.checkComplianceCSA",
          "group": "sentinel@5"
        },
        {
          "command": "sentinel.scanSecrets",
          "group": "sentinel@6"
        },
        {
          "command": "sentinel.sanitizePrompt",
          "group": "sentinel@7"
        },
        {
          "command": "sentinel.validateOutput",
          "group": "sentinel@8"
        },
        {
          "command": "sentinel.scanDatabase",
          "group": "sentinel@9"
        }
      ]
    },
    "submenus": [
      {
        "id": "sentinel.compliance",
        "label": "Sentinel Compliance"
      }
    ],
    "configuration": {
      "title": "Sentinel AI Safety",
      "properties": {
        "sentinel.enableRealTimeLinting": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time safety linting for prompts"
        },
        "sentinel.seedVariant": {
          "type": "string",
          "default": "standard",
          "enum": [
            "minimal",
            "standard"
          ],
          "description": "Default seed variant to insert"
        },
        "sentinel.highlightUnsafePatterns": {
          "type": "boolean",
          "default": true,
          "description": "Highlight potentially unsafe patterns in prompts"
        },
        "sentinel.llmProvider": {
          "type": "string",
          "default": "openai",
          "enum": [
            "openai",
            "anthropic",
            "ollama",
            "openai-compatible"
          ],
          "enumDescriptions": [
            "OpenAI API (requires API key)",
            "Anthropic API (requires API key)",
            "Ollama local server (free, no API key)",
            "OpenAI-compatible endpoint (Groq, Together AI, etc.)"
          ],
          "description": "LLM provider for semantic analysis"
        },
        "sentinel.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for semantic analysis (recommended for accurate results)"
        },
        "sentinel.openaiModel": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "OpenAI model for semantic analysis"
        },
        "sentinel.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "Anthropic API key for semantic analysis"
        },
        "sentinel.anthropicModel": {
          "type": "string",
          "default": "claude-3-haiku-20240307",
          "description": "Anthropic model for semantic analysis"
        },
        "sentinel.ollamaEndpoint": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama server endpoint (default: http://localhost:11434)"
        },
        "sentinel.ollamaModel": {
          "type": "string",
          "default": "llama3.2",
          "description": "Ollama model to use (e.g., llama3.2, mistral, qwen2.5)"
        },
        "sentinel.openaiCompatibleEndpoint": {
          "type": "string",
          "default": "",
          "description": "OpenAI-compatible API endpoint (e.g., https://api.groq.com, https://api.together.xyz)"
        },
        "sentinel.openaiCompatibleApiKey": {
          "type": "string",
          "default": "",
          "description": "API key for OpenAI-compatible endpoint"
        },
        "sentinel.openaiCompatibleModel": {
          "type": "string",
          "default": "llama-3.3-70b-versatile",
          "description": "Model for OpenAI-compatible endpoint (e.g., llama-3.3-70b-versatile for Groq)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^8.x",
    "@types/mocha": "^10.x",
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "@vscode/test-electron": "^2.3.x",
    "@vscode/vsce": "^2.x",
    "eslint": "^8.x",
    "glob": "^10.x",
    "mocha": "^10.x",
    "typescript": "^5.x"
  },
  "author": {
    "name": "Sentinel Team",
    "email": "team@sentinelseed.dev",
    "url": "https://sentinelseed.dev"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/sentinel-seed"
  },
  "badges": [
    {
      "url": "https://img.shields.io/badge/Twitter-@sentinelseed-1DA1F2?logo=twitter&logoColor=white",
      "href": "https://x.com/sentinelseed",
      "description": "Follow us on Twitter"
    },
    {
      "url": "https://img.shields.io/badge/GitHub-sentinel--seed-181717?logo=github",
      "href": "https://github.com/sentinel-seed/sentinel",
      "description": "Star us on GitHub"
    }
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "qna": "marketplace"
}
