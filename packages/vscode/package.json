{
  "name": "sentinel-ai-safety",
  "displayName": "Sentinel AI Safety",
  "description": "AI safety guardrails for LLM prompts using the THSP protocol (Truth, Harm, Scope, Purpose)",
  "version": "0.3.2",
  "publisher": "sentinelseed",
  "icon": "sentinel-logo-128.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/sentinel-seed/sentinel"
  },
  "homepage": "https://sentinelseed.dev",
  "bugs": {
    "url": "https://github.com/sentinel-seed/sentinel/issues"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "keywords": [
    "ai",
    "safety",
    "llm",
    "prompt",
    "alignment",
    "sentinel",
    "thsp",
    "guardrails"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:plaintext",
    "onLanguage:python",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:json",
    "onLanguage:yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sentinel.analyzeSelection",
        "title": "Sentinel: Analyze Selection for Safety"
      },
      {
        "command": "sentinel.analyzeFile",
        "title": "Sentinel: Analyze File for Safety"
      },
      {
        "command": "sentinel.insertSeed",
        "title": "Sentinel: Insert Alignment Seed"
      },
      {
        "command": "sentinel.insertSeedMinimal",
        "title": "Sentinel: Insert Minimal Alignment Seed"
      },
      {
        "command": "sentinel.showStatus",
        "title": "Sentinel: Show Status"
      },
      {
        "command": "sentinel.setOpenAIKey",
        "title": "Sentinel: Set OpenAI API Key (Secure)"
      },
      {
        "command": "sentinel.setAnthropicKey",
        "title": "Sentinel: Set Anthropic API Key (Secure)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "sentinel.analyzeSelection",
          "group": "sentinel",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {
      "title": "Sentinel AI Safety",
      "properties": {
        "sentinel.enableRealTimeLinting": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time safety linting for prompts"
        },
        "sentinel.seedVariant": {
          "type": "string",
          "default": "standard",
          "enum": ["minimal", "standard"],
          "description": "Default seed variant to insert"
        },
        "sentinel.highlightUnsafePatterns": {
          "type": "boolean",
          "default": true,
          "description": "Highlight potentially unsafe patterns in prompts"
        },
        "sentinel.useSentinelApi": {
          "type": "boolean",
          "default": false,
          "description": "Use Sentinel API for analysis (requires API endpoint)"
        },
        "sentinel.apiEndpoint": {
          "type": "string",
          "default": "https://api.sentinelseed.dev/api/v1/guard",
          "description": "Sentinel API endpoint for analysis (only used if useSentinelApi is enabled)"
        },
        "sentinel.llmProvider": {
          "type": "string",
          "default": "openai",
          "enum": ["openai", "anthropic"],
          "description": "LLM provider for semantic analysis"
        },
        "sentinel.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for semantic analysis (recommended for accurate results)"
        },
        "sentinel.openaiModel": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "OpenAI model for semantic analysis"
        },
        "sentinel.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "Anthropic API key for semantic analysis"
        },
        "sentinel.anthropicModel": {
          "type": "string",
          "default": "claude-3-haiku-20240307",
          "description": "Anthropic model for semantic analysis"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^8.x",
    "@types/mocha": "^10.x",
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "@vscode/test-electron": "^2.3.x",
    "@vscode/vsce": "^2.x",
    "eslint": "^8.x",
    "glob": "^10.x",
    "mocha": "^10.x",
    "typescript": "^5.x"
  }
}
